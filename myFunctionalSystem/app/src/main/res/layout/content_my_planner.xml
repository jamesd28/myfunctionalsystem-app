        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/coursePlannerView"
            android:background="#FFFFFF"

            android:nestedScrollingEnabled="true">

        </TableLayout>
    </ScrollView>
</RelativeLayout>
